&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME ./K_GW_BASIS
    POTENTIAL_FILE_NAME POTENTIAL
    RESTART_FILE_NAME ./PROJ-RESTART.wfn
    UKS
    MULTIPLICITY 1
    &MGRID
      CUTOFF 600
      REL_CUTOFF 50
    &END MGRID
    &QS
      METHOD GPW
      EPS_PGF_ORB           1.0E-80
      EPS_FILTER_MATRIX     1.0E-80
    &END QS
    &POISSON
      PERIODIC NONE
      PSOLVER MT
    &END
    &SCF

      SCF_GUESS RESTART
      EPS_SCF 1.0E-6

      MAX_SCF 500
      CHOLESKY INVERSE
      ADDED_MOS 50
      &SMEAR ON
        METHOD FERMI_DIRAC
        ELECTRONIC_TEMPERATURE 300  
      &END
      &MIXING
        METHOD BROYDEN_MIXING      
        ALPHA 0.1                  
        BETA 1.5
        NBUFFER 8
      &END
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END



      &OUTER_SCF
        MAX_SCF 50
        EPS_SCF 1.0E-6
      &END

    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL

      &WF_CORRELATION
        &RI_RPA
          RPA_NUM_QUAD_POINTS  120
          &GW
            CORR_MOS_OCC   100
            CORR_MOS_VIRT  100
            EV_GW_ITER      10
            NPARAM_PADE     16
            RI_SIGMA_X
          &END GW
        &END RI_RPA
      &END WF_CORRELATION

    &END XC
    &PRINT
      &MO_CUBES
        NHOMO 4
        NLUMO 1
        STRIDE 4 4 4
      &END
    &END PRINT
  &END DFT
  &SUBSYS
    &CELL
      ABC 71 25 15    
      PERIODIC NONE
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME   b3lyp-rks-opt.xyz
      COORD_FILE_FORMAT xyz
      &CENTER_COORDINATES
      &END
    &END TOPOLOGY
    &KIND H
      BASIS_SET         aug-cc-pVDZ-GTH
      BASIS_SET RI_AUX  aug-cc-pVDZ-RIFIT
      POTENTIAL         GTH-PBE
    &END KIND
    &KIND C
      BASIS_SET         aug-cc-pVDZ-GTH
      BASIS_SET RI_AUX  aug-cc-pVDZ-RIFIT
      POTENTIAL         GTH-PBE
    &END KIND
    &KIND C1
      BASIS_SET         aug-cc-pVDZ-GTH
      BASIS_SET RI_AUX  aug-cc-pVDZ-RIFIT
      POTENTIAL         GTH-PBE
      ELEMENT C
      MAGNETIZATION 2
    &END KIND
    &KIND C2
      BASIS_SET         aug-cc-pVDZ-GTH
      BASIS_SET RI_AUX  aug-cc-pVDZ-RIFIT
      POTENTIAL         GTH-PBE
      ELEMENT C
      MAGNETIZATION -2
    &END KIND
    &KIND N
      BASIS_SET         aug-DZVP-GTH
      BASIS_SET RI_AUX  RI_aug_DZ
      POTENTIAL         GTH-PBE
    &END KIND
    &KIND B
      BASIS_SET         K-aug-DZVP-GTH-3
      BASIS_SET RI_AUX  K-RI_aug_DZ
      POTENTIAL         GTH-PBE
    &END KIND
    &KIND O
      BASIS_SET         aug-DZVP-GTH
      BASIS_SET RI_AUX  RI_DZVP-own
      POTENTIAL         GTH-PBE
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  RUN_TYPE     ENERGY
  PROJECT      PROJ
  PRINT_LEVEL  MEDIUM
  EXTENDED_FFT_LENGTHS
&END GLOBAL
